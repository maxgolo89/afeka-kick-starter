<div class="row">
    <div class="col-lg-8 col-lg-offset-2">
        <form class="form-horizontal">
            <input type="hidden" class="form-control" id="project_id"  value="<%= params.projectId %>">
            <div class="form-group">
                <label for="credit_card" class="col-sm-2 control-label">Credit Card #</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="credit_card" placeholder="123456789">
                </div>
            </div>
            <div class="form-group">
                <label for="sum" class="col-sm-2 control-label">Sum</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="sum" placeholder="1000000">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a class="btn btn-default" href="#" role="button" onclick="donate();">Submit</a>
                </div>
            </div>
            <% if(err) { %>
            <p style="color: red"><%= err %></p>
            <% } %>
        </form>
    </div>
</div>