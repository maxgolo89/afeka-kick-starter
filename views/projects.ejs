<div class="row display-flex">
    <% var count = 1; %>
    <% params.projects.forEach(function(project) { %>
    <div class="col-md-4 col-sm-6">
        <div class="thumbnail panel">
            <img src="<%=project.images[0]%>" />
            <div class="caption">
                <h4><%= project.name %></h4>
                <p><%= project.description %></p>
                <hr>
                <% var dateOpt = {month: 'long', day: 'numeric', year: 'numeric'}%>
                <p>Deadline: <%= project.targetDate.toLocaleDateString("en-US", dateOpt) %></p>
                <p>Donation Status: <%= project.currentSum %>$ of <%= project.targetSum %>$</p>
            <input type="hidden" id="project_id_<%= count++ %>"  value="<%= project._id %>"/>
            <p onclick="project('<%= project._id %>')" class="btn btn-primary">Details</p>
            </div>
        </div>
    </div>
    <% }); %>
</div>