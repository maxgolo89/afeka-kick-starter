<div class="row" style="display: flex; flex-wrap: wrap;">
    <% projects.forEach(function(project) { %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
            <img src="<%=project.images[0]%>" />
            <div class="caption">
                <h4><%= project.name %></h4>
                <p><%= project.description %></p>
                <hr>
                <p>Target Time: <%= project.targetDate %></p>
                <p>Donation Status: <%= project.targetSum %> : <%= project.currentSum %></p>
            </div>
            <p onclick="project('<%= project._id %>')" class="btn btn-primary">Details</p>
        </div>
    </div>
    <% }); %>
</div>